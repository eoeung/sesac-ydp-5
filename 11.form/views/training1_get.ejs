<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>

    <style>
        fieldset{
            width: 10%;
        }
    </style>

  </head>
  <body>
    <form action="/getInfoForm" method="get">
      <!-- 이름  -->
      <label for="name">이름</label> <input type="text" name="name" id="name"/>
      <br />

      <!-- 성별 -->
      <fieldset>
        <legend>성별</legend>
        <input type="radio" name="gender" id="male" value="male" /> <label for="male">남자</label>
        <input type="radio" name="gender" id="female" value="female" /> <label for="female">여자</label>
      </fieldset>

      <!-- 생년월일 -->
      <fieldset>
        <legend>생년월일</legend>
        <select name="birth_year" id="birth_year">
          <% for(let i=1980; i<=2023; i++) { %>
          <option value=<%= i %>><%= i%></option>
          <% } %>
        </select>
        <label for="">년</label>

        <select name="birth_month" id="birth_month">
          <% for(let i=1; i<=12; i++) { %>
          <option value=<%= i %>><%= i%></option>
          <% } %>
        </select>
        <label for="">월</label>

        <select name="birth_day" id="birth_day">
          <% for(let i=1; i<=31; i++) { %>
          <option value=<%= i %>><%= i%></option>
          <% } %>
        </select>
        <label for="birth_day">일</label>
      </fieldset>
      <br />

      <!-- 관심사 -->
      <fieldset>
        <legend>관심사</legend>
        <input type="checkbox" name="interest" id="travel" value="여행" /> <label for="travel">여행</label>
        <input type="checkbox" name="interest" id="fashion" value="패션" /> <label for="fashion">패션</label>
        <input type="checkbox" name="interest" id="food" value="음식" /> <label for="food">음식</label>
      </fieldset>
      <br>

      <button>회원가입</button>
    </form>
  </body>
</html>
